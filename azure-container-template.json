{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerName": {
            "type": "string",
            "defaultValue": "skillmatch-api",
            "metadata": {
                "description": "Name of the container"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "geminiApiKey": {
            "type": "securestring",
            "metadata": {
                "description": "Google Gemini API Key"
            }
        },
        "dockerImage": {
            "type": "string",
            "defaultValue": "skillmatch-api:latest",
            "metadata": {
                "description": "Docker image name"
            }
        }
    },
    "variables": {
        "containerGroupName": "[concat(parameters('containerName'), '-group')]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2021-09-01",
            "name": "[variables('containerGroupName')]",
            "location": "[parameters('location')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('dockerImage')]",
                            "ports": [
                                {
                                    "port": 8001,
                                    "protocol": "TCP"
                                }
                            ],
                            "environmentVariables": [
                                {
                                    "name": "GEMINI_API_KEY",
                                    "secureValue": "[parameters('geminiApiKey')]"
                                },
                                {
                                    "name": "HOST",
                                    "value": "0.0.0.0"
                                },
                                {
                                    "name": "PORT",
                                    "value": "8001"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1.5
                                }
                            }
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "port": 8001,
                            "protocol": "TCP"
                        }
                    ],
                    "dnsNameLabel": "[concat(parameters('containerName'), '-', uniqueString(resourceGroup().id))]"
                },
                "restartPolicy": "Always"
            }
        }
    ],
    "outputs": {
        "containerURL": {
            "type": "string",
            "value": "[concat('http://', reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.fqdn, ':8001')]"
        },
        "containerFQDN": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerGroupName'))).ipAddress.fqdn]"
        }
    }
}
